# Seasonality SaaS Environment Configuration
# Copy this file to .env and update the values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://seasonality:seasonality123@localhost:5432/seasonality
POSTGRES_USER=seasonality
POSTGRES_PASSWORD=seasonality123
POSTGRES_DB=seasonality

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================
# MINIO CONFIGURATION
# ==============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=admin12345
MINIO_USE_SSL=false

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
API_PORT=3001
FRONTEND_PORT=3000

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.4.30:3000
# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================
DB_POOL_SIZE=10
REDIS_MAX_MEMORY=256mb
WORKER_CONCURRENCY=2
DB_BATCH_SIZE=1000

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Uncomment for development mode
# NODE_ENV=development
# LOG_LEVEL=debug
# WORKER_CONCURRENCY

# ==============================================
# CURRENCY CONFIGURATION
# ==============================================
INR_RATE=83